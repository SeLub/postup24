generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      String @id @db.Uuid
  username String
  password String
  email   String   @unique
  bio    String?
  image String?
  role  Role @default(USER)
  tarif Tarif @default(FREE)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}

enum Role {
  USER
  ADMIN
}

enum Tarif {
  FREE
  STANDART
  ADVANCED
}